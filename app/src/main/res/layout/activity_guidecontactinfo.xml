<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnContactNext"
        android:onClick="launchPayment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:id="@+id/tvGuidePaymentInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="26sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etHourlyPay"
        android:text="Secondary Phone #:"
        android:layout_below="@+id/etPaymentMethod"
        android:layout_alignLeft="@+id/etPaymentMethod"
        android:layout_alignStart="@+id/etPaymentMethod" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPackageDeals"
        android:text="Email"
        android:layout_below="@+id/etHourlyPay"
        android:layout_alignLeft="@+id/etHourlyPay"
        android:layout_alignStart="@+id/etHourlyPay" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etContactAdditional"
        android:text="Additional Contact Info"
        android:layout_below="@+id/etPackageDeals"
        android:layout_alignLeft="@+id/etPackageDeals"
        android:layout_alignStart="@+id/etPackageDeals" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPaymentMethod"
        android:text="Primary Phone #:"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/tvGuidePaymentInfo"
        android:layout_alignRight="@+id/btnContactNext"
        android:layout_alignEnd="@+id/btnContactNext"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary Phone #"
        android:id="@+id/tvPhonePrimary"
        android:layout_above="@+id/etHourlyPay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary Phone #:"
        android:id="@+id/tvPhoneSecondary"
        android:layout_above="@+id/etPackageDeals"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_above="@+id/etContactAdditional"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>