<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnPaymentNext"
        android:onClick="launchViewProfile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Information"
        android:id="@+id/tvGuidePaymentInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="26sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etHourlyPay"
        android:text="Hourly Pay: [ ]/hr"
        android:layout_below="@+id/etPaymentMethod"
        android:layout_alignLeft="@+id/etPaymentMethod"
        android:layout_alignStart="@+id/etPaymentMethod" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPackageDeals"
        android:text="Package Deals? Transportation fees?"
        android:layout_below="@+id/etHourlyPay"
        android:layout_alignLeft="@+id/etHourlyPay"
        android:layout_alignStart="@+id/etHourlyPay" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPaymentMethod"
        android:text="Choose Method: (Card/Cash), currency type"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tvGuidePaymentInfo"
        android:layout_alignLeft="@+id/tvGuidePaymentInfo"
        android:layout_alignStart="@+id/tvGuidePaymentInfo" />
</RelativeLayout>