<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_4"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login.UserLogin">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnLogin"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="133dp"
        android:layout_below="@+id/ivAppName"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_app"
        android:id="@+id/ivLogo"
        android:contentDescription="@string/applogo"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ivAppName"
        android:layout_toStartOf="@+id/ivAppName" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:src="@drawable/tourst"
        android:id="@+id/ivAppName"
        android:contentDescription="@string/app_name"
        android:layout_alignTop="@+id/ivLogo"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin" />


</RelativeLayout>
