<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlace"
        android:hint="San Francisco"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/tvPlace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tvMakeRequest"
        android:layout_alignStart="@+id/tvMakeRequest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit New Request"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make a new request"
        android:id="@+id/tvMakeRequest"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:id="@+id/tvPlace"
        android:textSize="16sp"
        android:layout_marginTop="44dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/tvMakeRequest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/tvDate"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/etPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etStartDate"
        android:textSize="16sp"
        android:hint="Start"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_alignLeft="@+id/etPlace"
        android:layout_alignStart="@+id/etPlace" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etEndDate"
        android:textSize="16sp"
        android:hint="End"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_alignRight="@+id/etPlace"
        android:layout_alignEnd="@+id/etPlace" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="to"
        android:id="@+id/tvTo"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:layout_alignBaseline="@+id/etStartDate"
        android:layout_alignBottom="@+id/etStartDate"
        android:layout_toRightOf="@+id/etStartDate"
        android:layout_toEndOf="@+id/etStartDate"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Size"
        android:id="@+id/tvGroupSize"
        android:textSize="15sp"
        android:layout_marginTop="28dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/etStartDate"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/tvGroupSize"
        android:layout_alignLeft="@+id/etStartDate"
        android:layout_alignStart="@+id/etStartDate"
        android:textSize="16sp"
        android:hint="Enter group size"
        android:layout_alignRight="@+id/etEndDate"
        android:layout_alignEnd="@+id/etEndDate" />


</RelativeLayout>